<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>br.edu.ifpb.bdnc.sosmulher.servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrarUsuario</servlet-name>
        <servlet-class>br.edu.ifpb.bdnc.sosmulher.servlets.CadastrarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>br.edu.ifpb.bdnc.sosmulher.servlets.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrarDenuncia</servlet-name>
        <servlet-class>br.edu.ifpb.bdnc.sosmulher.servlets.CadastrarDenuncia</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerificarUsuarioLogado</servlet-name>
        <servlet-class>br.edu.ifpb.bdnc.sosmulher.servlets.VerificarUsuarioLogado</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>ExibirPontos</servlet-name>
        <servlet-class>br.edu.ifpb.bdnc.sosmulher.servlets.ExibirPontos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarUsuario</servlet-name>
        <url-pattern>/CadastrarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarDenuncia</servlet-name>
        <url-pattern>/CadastrarDenuncia</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerificarUsuarioLogado</servlet-name>
        <url-pattern>/VerificarUsuarioLogado</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExibirPontos</servlet-name>
        <url-pattern>/ExibirPontos</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
